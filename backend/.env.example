# Server Port
PORT=3001

# Amadeus API (GDS)
# Get free keys at: https://developers.amadeus.com
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret

# Kiwi.com API (Low-Cost Carriers)
# Get free keys at: https://tequila.kiwi.com/portal/docs
KIWI_API_KEY=your_kiwi_api_key

# SerpAPI (for Booking.com)
# Get free keys at: https://serpapi.com
SERPAPI_KEY=your_serpapi_key

# RapidAPI (for Blue Scraper & Google Flights)
# Get a single key at: https://rapidapi.com/hub
RAPIDAPI_KEY=your_rapidapi_key

# --- Development ---
NODE_ENV=development
